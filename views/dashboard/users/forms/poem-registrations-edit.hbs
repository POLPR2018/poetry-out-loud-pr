          <div class="form-group col-md-12">
            <label for="poem2Checks">Choose the category (you can choose up to two)</label>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem2LinesCheck">
              <label class="form-check-label" for="poem2LinesCheck">
                25 lines or less {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem2LinesCheck}}</span>)</b> {{/if}}
              </label>
            </div>

            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem2CenturyCheck">
              <label class="form-check-label" for="poem2CenturyCheck">
                Before 20th Century {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem2CenturyCheck}}</span>)</b> {{/if}}
              </label>
            </div>

            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem2FreeCheck">
              <label class="form-check-label" for="poem2FreeCheck">
                Free Selection {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem2FreeCheck}}</span>)</b> {{/if}}
              </label>
            </div>
          </div>
        </div><!-- row ends -->
      </div><!-- End of panel body -->
    </div><!-- Poem 2 info ends -->

    <!-- Poem 3 info -->
    <div class="panel panel-default">
      <div class="panel-heading">
        Poem #3
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="form-group col-md-6">
            <label for="poem2AuthorName">
              Author's Name <span style="color:red;">*</span>
            </label>
            <input type="text" class="form-control" name="poem3AuthorName" placeholder="Enter the Author's name" value="{{poemRegistrations.poem3AuthorName}}" required>
          </div>

          <div class="form-group col-md-6">
