              <label class="form-check-label" for="poem3LinesCheck">
                25 lines or less {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem3LinesCheck}}</span>)</b> {{/if}}
              </label>
            </div>

            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem3CenturyCheck">
