{{> header }}

<div class="container">
  {{#if user.admin}}
  <form action="/dashboard/users/forms/poem-registrations/{{poemRegistrations.id}}" method="post">
    <h2>Poem Registration</h2>
    <p>
      <b>All fields with <span style="color: red">*</span> are required</b>
    </p>

    <div class="form-group">
      <label for="schoolName">
        School Name <span style="color:red;">*</span>
      </label>
      <input type="text" class="form-control" name="schoolName" placeholder="Enter the school's name" value="{{poemRegistrations.schoolName}}" required>
    </div>

    <div class="form-group">
      <label for="winnersName">
        Winner's Name <span style="color:red;">*</span>
      </label>
      <input type="text" class="form-control" name="winnersName" placeholder="Enter the Winner's name" value="{{poemRegistrations.winnersName}}" required>
    </div>

    <!-- Poem 1 info -->
    <div class="panel panel-default">
      <div class="panel-heading">
        Poem #1
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="form-group col-md-6">
            <label for="poem1AuthorName">
              Author's Name <span style="color:red;">*</span>
            </label>
            <input type="text" class="form-control" name="poem1AuthorName" placeholder="Enter the Author's name" value="{{poemRegistrations.poem1AuthorName}}" required>
          </div>

          <div class="form-group col-md-6">
            <label for="poem1Title">
              Poem Title <span style="color:red;">*</span>
            </label>
            <input type="text" class="form-control" name="poem1Title" placeholder="Enter the title of the poem" value="{{poemRegistrations.poem1Title}}" required>
          </div>

          <!-- These will be links that the user will copy from another source and paste here -->
          <div class="form-group col-md-6">
            <label for="poem1Url">
              Poem Link <span style="color:red;">*</span>
            </label>
            <input type="text" class="form-control" name="poem1Url" placeholder="Paste the selected poem's web link here" value="{{poemRegistrations.poem1Url}}" required>
          </div>

          <div class="form-group col-md-6">
            <label for="poem1AnthologyUrl">
              Anthology Link <span style="color:red;">*</span>
            </label>
            <input type="text" class="form-control" name="poem1AnthologyUrl" placeholder="Paste the Anthology's web link here" value="{{poemRegistrations.poem1AnthologyUrl}}" required>
          </div>

          <div class="form-group col-md-12">
            <label for="poem1Checks">Choose the category (you can choose up to two)</label>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem1LinesCheck" value="poem1LinesCheck">
              <label class="form-check-label" for="poem1LinesCheck">
                25 lines or less {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem1LinesCheck}}</span>)</b> {{/if}}
              </label>
            </div>

            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem1CenturyCheck" value="poem1CenturyCheck">
              <label class="form-check-label" for="poem1CenturyCheck">
                Before 20th Century {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem1CenturyCheck}}</span>)</b> {{/if}}
              </label>
            </div>

            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem1FreeCheck" value="poem1FreeCheck">
              <label class="form-check-label" for="poem1FreeCheck">
                Free Selection {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem1FreeCheck}}</span>)</b> {{/if}}
              </label>
            </div>
          </div>
        </div><!-- row ends -->
      </div><!-- End of panel body -->
    </div><!-- Poem 1 info ends -->

    <!-- Poem 2 info -->
    <div class="panel panel-default">
      <div class="panel-heading">
        Poem #2
      </div>
      <div class="panel-body">
