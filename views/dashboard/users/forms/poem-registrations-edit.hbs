                Before 20th Century {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem3CenturyCheck}}</span>)</b> {{/if}}
              </label>
            </div>

            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="poem3FreeCheck">
              <label class="form-check-label" for="poem3FreeCheck">
                Free Selection {{#if user.admin}} <b>(currently <span style="color:red">{{poemRegistrations.poem3FreeCheck}}</span>)</b> {{/if}}
              </label>
            </div>
          </div>
        </div><!-- row ends -->
      </div><!-- End of panel body -->
    </div><!-- Poem 3 info ends -->

    <!-- The following fields are hidden to users and should ONLY be visible and editable by a site admin-level user. -->
    <div class="panel panel-danger">
      <div class="panel-heading">
        Administrators Only
      </div>

      <div class="panel-body">
        <p>Sent Required Documents (currently {{poemRegistrations.poemRegistrationRequiredDocuments}})</p>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="poemRegistrationRequiredDocuments" name="yesSentPoemDocs" value="true">
          <label class="form-check-label" for="yesSentPoemDocs">Yes</label>
        </div>

        <div class="form-check">
          <input class="form-check-input" type="radio" name="poemRegistrationRequiredDocuments" name="noSentPoemDocs" value="false">
          <label class="form-check-label" for="noSentPoemDocs">No</label>
        </div>
      </div>
    </div>
    <!-- End of fields hidden to user -->

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  {{else}}
  <div class="text-center">
    <h3>This is not the page you are looking for.</h3>
    <p>Only admins have access to this page.</p>
  </div>
  {{/if}}
</div><!-- container -->

