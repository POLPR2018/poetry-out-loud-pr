{{> header }}
<!-- This view should only be visible to Administrators -->
<div class="container">
	<!-- <button class="btn btn-lg pull-right">Search</button> -->
	<form class="navbar-form pull-right" role="search">
		<div class="input-group">
			<input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
			<div class="input-group-btn">
				<button class="btn btn-default btn-sm" type="submit"><i class="glyphicon glyphicon-search"></i></button>
			</div>
		</div>
	</form>

	<h2>Registered Users</h2>
	<br>

	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">School</th>
					<th scope="col">City</th>
					<th scope="col">Email</th>
					<th scope="col">Representative</th>
					<th scope="col">Poet/Mentor</th>
				</tr>
			</thead>

			<tbody>
				{{#each users}}
				<tr>
					<td><a href="/dashboard/users/{{_id}}">{{schoolName}}</a></td>
					<td>{{city}}</td>
					<td>{{email}}</td>
					<td>{{schoolRepresentativeName}}</td>
					<td>{{schoolRepresentativeTutorMentor}}</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div><!-- Container ends -->

{{> footer }}
